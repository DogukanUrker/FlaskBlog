# Flask Application Settings
APP_SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32
DEBUG_MODE=False

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_MAIL=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here

# reCAPTCHA Configuration (Optional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Database Configuration
DB_FOLDER_ROOT=db/

# Upload Configuration
MAX_UPLOAD_SIZE=5242880
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,webp

# Social Sharing Configuration (Optional)
# Enable/disable social sharing button on posts
SHARE_ENABLED=True
# Base URL for sharing (default is X/Twitter)
# Examples:
#   X/Twitter: https://x.com/intent/tweet?text=
#   Facebook: https://www.facebook.com/sharer/sharer.php?u=
#   LinkedIn: https://www.linkedin.com/sharing/share-offsite/?url=
SHARE_URL=https://x.com/intent/tweet?text=
# Icon class from Tabler Icons (https://tabler-icons.io/)
SHARE_ICON=ti-brand-x
