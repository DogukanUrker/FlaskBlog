{% extends 'layout.html.jinja' %}

{% block head %}
<!-- Set the title of the page to "flaskBlog" -->
<title>flaskBlog</title>
{% endblock head %}

{% block body %}
<!-- Include the category container component -->
{% from "components/categoryContainer.html.jinja" import categoryContainer %}
{{ categoryContainer(translations) }}

<!-- Display the category title with specific styling -->
<h1 class="text-center font-bold text-3xl text-rose-500 mt-4 select-none">
  {{ category }}
</h1>

<!-- Include the sort dropdown component -->
{% from "components/sortMenu.html.jinja" import sortMenu %}
{{ sortMenu(sortName,source,translations, sortBy, orderBy) }}

<!-- Flex container for displaying posts -->
<div id="postCardContainer"
  class="flex items-center justify-center flex-wrap gap-x-2 gap-y-6 mx-auto w-11/12 md:w-10/12 lg:w-9/12 2xl:w-8/12 mt-6">
  <div class="hidden size-16 border-4 border-rose-500 border-t-transparent rounded-full animate-spin" id="homeSpinner">
  </div>
</div>

<!-- Load more button -->
<div id="loadMoreButton" class="my-6 flex items-center justify-center text-rose-500 hover:text-rose-500/75 gap-2">
  <!-- Current selected category -->
  <input id="currentCategoryText" type="hidden" value="{{ categoryBy }}">
  <button onclick="loadMoreButton()">Load more</button>
  <!-- View All spinner -->
  <div class="hidden w-5 h-5 border-4 border-rose-500 border-t-transparent rounded-full animate-spin"
    id="loadMoreSpinner"></div>
</div>


<!-- Footer section with about link and credit information -->
<div class="text-center mt-4 mb-2 text-xs font-medium">
  <div class="mb-1">
    <!-- Link to the "About" page -->
    <a href="/about" class="text-rose-500 hover:text-rose-600 duration-150"
      target="_blank">{{translations.about.title}}</a>
  </div>
  <!-- Attribution to the original author and website -->
  <!-- Please respect this codeâ€™s originality and credit the original repo. Thanks for your cooperation. ðŸ’œ -->
  {{ translations.about.credits | safe }}
  <br />
</div>

<script>
  // Initialize postCardMacroPath to access in js file
  const postCardMacroPath = "{{ url_for('static', filename='pureHtmlMacro/postCardMacro.html') }}"
</script>
<!-- Include the JavaScript file for homeFeed functionality -->
<script src="{{ url_for('static', filename='js/homeFeed.js') }}"></script>
{% endblock body %}